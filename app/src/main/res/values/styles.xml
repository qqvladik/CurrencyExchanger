<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonDarkStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/button_dark_height_size</item>
        <item name="backgroundTint">@color/blue500</item>
        <item name="android:textSize">@dimen/button_dark_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">@dimen/button_dark_corner_radius</item>
    </style>

    <style name="TitleTextStyle">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <style name="ExchangeTextStyle">
        <item name="android:textSize">@dimen/exchange_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">end|center_vertical</item>
        <item name="android:background">@drawable/edit_text_without_line</item>
    </style>

    <style name="DividerStyle">
        <item name="android:layout_height">@dimen/divider_height_size</item>
        <item name="android:background">@color/gray</item>
    </style>

    <style name="BalanceItemTextStyle">
        <item name="android:textSize">@dimen/balance_item_text_size</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>